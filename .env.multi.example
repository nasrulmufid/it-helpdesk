# Environment configuration for multi-service Docker container
APP_NAME="IT Help Desk"
APP_ENV=production
APP_DEBUG=false
APP_KEY=

# Database configuration for MySQL
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=it_helpdesk
DB_USERNAME=it_helpdesk_user
DB_PASSWORD=it_helpdesk_pass

# MySQL root password (for container initialization)
MYSQL_ROOT_PASSWORD=root_password

# Mail configuration (optional)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="helpdesk@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Session and cache configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# File upload configuration
FILESYSTEM_DISK=local
MAX_FILE_SIZE=10240

# Application specific settings
DEFAULT_PASSWORD=password123
DEFAULT_ADMIN_EMAIL=admin@example.com